<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="SclZfCart\Entity\CartItem" table="cart_item">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <many-to-one field="cart" target-entity="SclZfCart\Entity\Cart" inversed-by="items" />

        <field name="uid" type="string" />
        <field name="quantity" type="integer" />
        <field name="unitPrice" type="decimal" precision="11" scale="2" />
        <field name="unitTax" type="decimal" precision="11" scale="2" />
        <field name="price" type="decimal" precision="11" scale="2" />
        <field name="tax" type="decimal" precision="11" scale="2" />
        <field name="type" type="string" />
        <field name="data" type="text" />
    </entity>
</doctrine-mapping>
